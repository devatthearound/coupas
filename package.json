{
  "name": "coupas",
  "version": "0.0.1",
  "private": true,
  "homepage": "https://growsome.kr",
  "author": {
    "name": "devatthearound",
    "email": "dev@the-around.com",
    "url": "https://the-around.com"
  },
  "main": "build/index.js",
  "description": "NextJS App with Electron",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "cross-env NODE_ENV=production next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "dev": "npm-run-all --parallel electron:dev next:dev",
    "postinstall": "electron-builder install-app-deps",
    "install-sharp-win": "npm_config_platform=win32 npm_config_arch=x64 npm install sharp",
    "install-sharp-mac": "npm_config_platform=darwin npm_config_arch=x64 npm install sharp",
    "install-sharp-all": "npm run install-sharp-win && npm run install-sharp-mac",
    "electron:build": "tsup --minify --treeshake --clean",
    "build-mac-arm64": "electron-builder build --mac --arm64",
    "build-mac-x64": "electron-builder build --mac --x64",
    "build-win-x64": "electron-builder build --win --x64",
    "build-win-arm64": "electron-builder build --win --arm64",
    "build-all": "npm run build && electron-builder build -mw --x64 --arm64",
    "docker:build": "chmod +x build.sh && ./build.sh",
    "docker:mac-arm64": "docker-compose run --rm electron-builder npm run build-mac-arm64",
    "docker:mac-x64": "docker-compose run --rm electron-builder npm run build-mac-x64",
    "docker:win-x64": "docker-compose run --rm electron-builder npm run build-win-x64",
    "docker:win-arm64": "docker-compose run --rm electron-builder npm run build-win-arm64",


    "build": "cross-env NODE_ENV=production run-s electron:build next:build",
    "publish": "electron-builder --publish always"
  
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@hello-pangea/dnd": "^18.0.1",
    "@heroicons/react": "^2.2.0",
    "@next/env": "^14.2.5",
    "axios": "^1.8.1",
    "bcryptjs": "^3.0.2",
    "cross-env": "^7.0.3",
    "electron-notarize": "^1.2.2",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "get-port-please": "^3.1.2",
    "google-auth-library": "^9.15.1",
    "googleapis": "^146.0.0",
    "jose": "^6.0.8",
    "jszip": "^3.10.1",
    "moment": "^2.30.1",
    "next": "15.1.4",
    "openai": "^4.86.1",
    "pg": "^8.13.3",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.2",
    "sharp": "^0.34.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/bcrypt": "^5.0.2",
    "@types/ffprobe-static": "^2.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.1.0",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.3.3",
    "@types/react-beautiful-dnd": "^13.1.8",
    "@types/react-dom": "^18.3.0",
    "electron": "^31.3.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.5.7",
    "eslint-config-next": "14.2.5",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.7",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4"
  },
  "build": {
    "appId": "com.growsome.coupas",
    "productName": "coupas",
    "executableName": "coupas",
    "copyright": "Copyright © 2025 The Around",
    "buildDependenciesFromSource": true,
    "npmRebuild": true,
    "asar": {
      "smartUnpack": true
    },
    "compression": "maximum",
    "publish": [
      {
        "provider": "github",
        "owner": "devatthearound",
        "repo": "coupas",
        "private": false,
        "vPrefixedTagName": true,
        "releaseType": "release"
      }
    ],
    "asarUnpack": [
      "node_modules/next",
      "node_modules/@img",
      "node_modules/next/dist/compiled/@vercel/og",
      "node_modules/sharp",
      "node_modules/bcrypt",
      "node_modules/ffmpeg-static",
      "node_modules/ffprobe-static",
      "node_modules/ffmpeg-static/bin/${platform}/${arch}/ffmpeg*",
      "node_modules/ffprobe-static/bin/${platform}/${arch}/ffprobe*",
      "**\\*.{node,dll}"
    ],
    "extraMetadata": {
      "main": "build/index.js"
    },
    "files": [
      "build",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json",
          "!**/*.map",
          "!**/*.md",
          "!**/node_modules/**/*test*",
          "!**/node_modules/**/*.d.ts",
          "!**/node_modules/**/*.md",
          "!**/node_modules/**/docs/**",
          "!**/node_modules/**/example/**",
          "!**/node_modules/**/test/**"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "extraResources": [
      {
        "from": "electron/assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "coupas-${version}-win-${arch}.${ext}",
      "publisherName": "The Around",
      "verifyUpdateCodeSignature": false,
      "icon": "electron/assets/icon.ico",
      "signDlls": true
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "installerIcon": "electron/assets/icon.ico",
      "uninstallerIcon": "electron/assets/icon.ico",
      "installerHeaderIcon": "electron/assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "쿠파스",
      "deleteAppDataOnUninstall": false,
      "displayLanguageSelector": false,
      "unicode": true,
      "runAfterFinish": true,
      "menuCategory": "디어라운드",
      "artifactName": "coupas-${version}-win-installer-${arch}.${ext}"
    },
    "afterSign": "scripts/notarize.js",
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "coupas-${version}-mac-${arch}.${ext}",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": true
    },
    "dmg": {
      "background": "electron/assets/dmg-background.png",
      "icon": "electron/assets/icon.icns",
      "iconSize": 100,
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "directories": {
      "output": "releases",
      "buildResources": "electron/assets"
    },
    "protocols": [
      {
        "name": "Coupas Auth",
        "schemes": [
          "coupas-auth"
        ],
        "role": "Viewer"
      },
      {
        "name": "Coupas Youtube",
        "schemes": [
          "google-auth"
        ],
        "role": "Viewer"
      }
    ]
  }
}
